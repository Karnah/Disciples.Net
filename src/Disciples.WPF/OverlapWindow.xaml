<Window x:Class="Disciples.WPF.OverlapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Disciples.WPF"
        mc:Ignorable="d"
        Title="OverlapWindow" WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized" ShowInTaskbar="False">
    <Window.Background>
        <SolidColorBrush>
            <SolidColorBrush.Color>
                <!-- Если выставлять полностью прозрачный, то нажатия проходят "насквозь". -->
                <Color A="1" R="255" G="255" B="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
    </Window.Background>
</Window>