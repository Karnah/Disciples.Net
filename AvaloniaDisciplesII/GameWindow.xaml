<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AvaloniaDisciplesII;assembly=AvaloniaDisciplesII"
        xmlns:battle="clr-namespace:AvaloniaDisciplesII.Battle;assembly=AvaloniaDisciplesII"
        xmlns:e="clr-namespace:Engine;assembly=Engine"
        Icon="resm:AvaloniaDisciplesII.Assets.Icon.ico"
        WindowState="Maximized" Background="Black" HasSystemDecorations="False" CanResize="False"
        Title="Avalonia Disciples II">

  <Grid Name="Field" Width="{x:Static e:GameInfo.Width}" Height="{x:Static e:GameInfo.Height}"
        HorizontalAlignment="Center" VerticalAlignment="Center">
    <battle:BattleView DataContext="{Binding ViewContext}" />
  </Grid>
</Window>