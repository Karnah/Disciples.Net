<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AvaloniaDisciplesII"
             xmlns:battle="clr-namespace:AvaloniaDisciplesII.Battle"
             xmlns:models="clr-namespace:Engine.Models;assembly=Engine"
             xmlns:c="clr-namespace:AvaloniaDisciplesII.Converters;assembly=AvaloniaDisciplesII">
  <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="resm:Avalonia.Themes.Default.DefaultTheme.xaml?assembly=Avalonia.Themes.Default"/>
        <StyleInclude Source="resm:Avalonia.Themes.Default.Accents.BaseLight.xaml?assembly=Avalonia.Themes.Default"/>

        <Style Selector="battle|BattleUnitView">
          <Setter Property="Template">
            <ControlTemplate>
              <Image Stretch="Fill"
                     Source="{TemplateBinding BattleUnit.BattleUnitAnimationComponent.Bitmap}"
                     Width="{TemplateBinding BattleUnit.BattleUnitAnimationComponent.Width}"
                     Height="{TemplateBinding BattleUnit.BattleUnitAnimationComponent.Height}" />
            </ControlTemplate>
          </Setter>
        </Style>

    </Application.Styles>
</Application>